<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="60sp"
        android:textStyle="bold" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/sign_in_activity_facebook_sign_in_button"
            style="@style/SignInButton"
            android:backgroundTint="@color/colorFacebookSignIn"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:textAlignment="center"
            android:visibility="gone"
            facebook:com_facebook_login_text="@string/facebook_sign_in_button_text" />

        <Button
            android:id="@+id/sign_in_activity_fake_facebook_sign_in_button"
            style="@style/SignInButton"
            android:backgroundTint="@color/colorFacebookSignIn"
            android:drawableStart="@drawable/com_facebook_button_icon"
            android:text="@string/facebook_sign_in_button_text" />

        <Button
            android:id="@+id/sign_in_activity_google_sign_in_button"
            style="@style/SignInButton"
            android:drawableStart="@drawable/common_google_signin_btn_icon_light"
            android:text="@string/google_sign_in_button_text"
            app:backgroundTint="@color/colorGoogleSignIn" />


    <ProgressBar
        android:id="@+id/activity_sign_in_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>